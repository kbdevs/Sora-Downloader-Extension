{
  "manifest_version": 3,
  "name": "Sora Downloader",
  "description": "Adds a download button to every video and saves it with one click.",
  "version": "0.1.0",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://*.sora.com/*",
    "https://sora.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.sora.com/*",
        "https://sora.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
